# Personal Message
# Store a name in a variable and write a message to the person using an f-string.
name = "Sherrard"
print(f"Hello {name}, nice to meet you!")

# Name Cases
# Store a name in a variable, then print that person's name using lower, upper, and title case methods.
name = "Rod"
print(name.lower())    # Outputs: rod
print(name.upper())    # Outputs: ROD
print(name.title())    # Outputs: Rod

# Famous Quote
# Find a famous quote and print it using double quotes inside single quotes, then vice versa.
quote = "When you teach something you get to learn it twice. - Jim Kwik"
print(f'"{quote}"')
print(f"'{quote}'")

# Stripping Names
# Store a name in a variable, then print it using lstrip, rstrip, and strip methods.
name = "    Kai     "
print(f"Original: '{name}'")           # Show original name with spaces
print(f"Left stripped: '{name.lstrip()}'")   # Outputs: 'Kai     '
print(f"Right stripped: '{name.rstrip()}'")  # Outputs: '    Kai'
print(f"Stripped: '{name.strip()}'")         # Outputs: 'Kai'




